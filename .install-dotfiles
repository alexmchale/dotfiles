#!/bin/bash

# Be verbose, exit on failure.
set -o verbose
set -o errexit

# Clone the repository.
cd "$HOME"
rm -rf dotfiles.git
git clone https://github.com/alexmchale/dotfiles.git dotfiles.git

# Move the files from the repo into $HOME.
for file in .* *; do
  if [ "$file" = "." ] || [ "$file" = ".." ]; then
    # Don't deal with the local paths.
  else
    rm -rf "$HOME/$file"
    mv "$file" "$HOME/"
  fi
done

# Remove the cloned path.
cd "$HOME"
rm -rf dotfiles.git
